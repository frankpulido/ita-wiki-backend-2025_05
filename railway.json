{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "region": "us-west2",
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "php artisan optimize:clear && php artisan migrate --force --seed && php artisan l5-swagger:generate && php artisan serve --host=0.0.0.0 --port=$PORT",
        "sleepApplication": false,
        "multiRegionConfig": {
            "us-west2": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
